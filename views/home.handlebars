                <label for="room">Room</label>
                <select name="room" id="room">
                    <option value="Room1">Game Room 1</option>
                    <option value="Room2">Game Room 2</option>
                    <!-- <option value="PHP">PHP</option>
                    <option value="C#">C#</option>
                    <option value="Ruby">Ruby</option>
                    <option value="Java">Java</option> -->
                </select>
            </div>
            <a href="/api/gameroom"><button type="submit" class="btn">Join Game</button></a>
        </form>
    </main>
</div>